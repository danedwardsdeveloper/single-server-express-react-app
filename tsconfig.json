{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": true,
		"outDir": "./server/dist",
		"rootDir": "./server/src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noImplicitAny": true
	},
	"include": ["server/src/**/*"],
	"exclude": ["node_modules", "dist"]
}
